# Example environment variables for documentation site
# Copy this file to .env.local and fill in your values

# Analytics (optional)
# Google Analytics measurement ID
NEXT_PUBLIC_GA_ID=

# Development settings
# API endpoint for development
NEXT_PUBLIC_API_URL=http://localhost:3000

# Feature flags
# Enable experimental features in development
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false

# Debug mode
# Show debug information in console
NEXT_PUBLIC_DEBUG=false

# Theme settings (optional)
# Default color scheme: 'light' | 'dark' | 'auto'
NEXT_PUBLIC_DEFAULT_THEME=auto

# Do not commit .env.local files!
# Add to .gitignore:
# .env*.local
